@page "/create-product"
@inject IProductsService ProductsService

<DynamicForm Title="Create Product"
             Item="Input" TItem="ProductViewModel"
             OnSave="OnSaveProduct"
             OnUndo="OnUndo" />

@code {
    public ProductViewModel Input { get; set; } = new();

    private async Task OnSaveProduct(ProductViewModel model)
    {
        await ProductsService.ProductInsertAsync(model);
    }

    private void OnUndo()
    {
        Input = new();
    }
}
