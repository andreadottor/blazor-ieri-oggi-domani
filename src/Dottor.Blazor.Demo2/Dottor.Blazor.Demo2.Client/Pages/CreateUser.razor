@page "/create-user"
@inject IUsersService UserService

<DynamicForm Title="Create User"
             Item="Input" TItem="UserViewModel"
             OnSave="OnSaveUser"
             OnUndo="OnUndo"/>


@code {
    private UserViewModel Input { get; set; } = new();

    private async Task OnSaveUser(UserViewModel model)
    {
        await UserService.UserInsertAsync(model);
    }

    private void OnUndo()
    {
        Input = new();
    }
}
